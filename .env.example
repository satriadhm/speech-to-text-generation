# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-change-in-production

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Job Management
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=600
JOB_CLEANUP_INTERVAL=3600

# CORS Settings
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Storage Paths (will be created automatically)
UPLOAD_FOLDER=storage/uploads
OUTPUT_FOLDER=storage/outputs
TEMP_FOLDER=storage/temp
LOG_FOLDER=storage/logs

# Audio Processing Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=wav

# Speech Recognition (FREE TIER ONLY)
# Only Google Speech Recognition (free) is enabled by default
# For better accuracy, you can optionally add API keys below:

# Optional: Google Cloud Speech API (has free quota)
# GOOGLE_CLOUD_SPEECH_CREDENTIALS=path/to/service-account.json

# Optional: Azure Speech Services (has free quota)  
# AZURE_SPEECH_KEY=your-azure-speech-key
# AZURE_SPEECH_REGION=your-azure-region

# Optional: Wit.ai (free for limited use)
# WIT_AI_KEY=your-wit-ai-key

# Webhook Settings (optional)
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# Cache Settings
CACHE_TYPE=memory
CACHE_DEFAULT_TIMEOUT=300

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false